// Loaded via --nfconfig
// workaround for pubmlst + HPC: remove `-e` so MLST probing failures don't abort the whole task

process {
  withName: 'BACTOPIA:MLST:MLST_MODULE' {
    // Use bash without -e (keep -u and -o pipefail)
    shell = ['/bin/bash','-uo','pipefail','-c']

    // If you previously relied on "errMode = 'stdouterr'", Nextflow doesn't have that directive.
    // To merge stderr into stdout, do it in-command (the pipeline can already handle this),
    // or you can add "2>&1" inside the tool wrapper if needed.

    // Optional hardening you might want:
    // errorStrategy = 'retry'
    // maxRetries = 1
  }
}
